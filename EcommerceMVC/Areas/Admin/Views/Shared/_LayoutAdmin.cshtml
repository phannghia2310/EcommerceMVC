    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Chart CSS-->
    <link href="~/AdminLayout/plugins/chart.js/chart.min.css" rel="stylesheet" />
    <!-- Tempusdominus Bbootstrap 4 -->
    <link rel="stylesheet" href="~/AdminLayout/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->              
    <link rel="stylesheet" href="~/AdminLayout/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->              
    <link rel="stylesheet" href="~/AdminLayout/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLayout/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminLayout/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->    
    <link rel="stylesheet" href="~/AdminLayout/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->          
    <link rel="stylesheet" href="~/AdminLayout/plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    @RenderSection("Sections", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="pushmenu" class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/Home/Index" class="nav-link">Trang chủ</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Index" asp-controller="HoiDap" class="nav-link">Hỏi đáp</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fa fa-comments"></i>
                        <span class="badge badge-danger navbar-badge">0</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a asp-action="Index" asp-controller="Chat" class="dropdown-item dropdown-footer">See All Messages</a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Admin/Home/Index" class="brand-link">
                <span class="brand-text font-weight-light">Admin Ecommerce</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Hinh/KhachHang/user.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    @await Component.InvokeAsync("NhanVienLogin")
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview menu-open">
                            <a asp-action="Index" asp-controller="Home" class="nav-link @(controller == "Home" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-tachometer-alt"></i>
                                <p>
                                    Thống kê
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Supplier" class="nav-link @(controller == "Supplier" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-store"></i>
                                <p>
                                    Quản lý nhà cung cấp
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Customer" class="nav-link @(controller == "Customer" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-users"></i>
                                <p>
                                    Quản lý khách hàng
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Department" class="nav-link @(controller == "Department" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-city"></i>
                                <p>
                                    Quản lý phòng ban
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Employee" class="nav-link @(controller == "Employee" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-user-tie"></i>
                                <p>
                                    Quản lý nhân viên
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Category" class="nav-link @(controller == "Category" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-cubes"></i>
                                <p>
                                    Quản lý loại sản phẩm
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Product" class="nav-link @(controller == "Product" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-cube"></i>
                                <p>
                                    Quản lý sản phẩm
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Cart" class="nav-link @(controller == "Cart" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-shopping-cart"></i>
                                <p>
                                    Quản lý đơn đặt hàng
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="HoiDap" class="nav-link @(controller == "HoiDap" && action == "Index" ? "active" : "")">
                                <i class="nav-icon fa fa-question"></i>
                                <p>
                                    Quản lý hỏi đáp
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Chat" class="nav-link">
                                <i class="nav-icon fa fa-comments"></i>
                                <p>
                                    Chat với khách hàng
                                </p>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a asp-action="Logout" asp-controller="Account" class="nav-link">
                                    <i class="nav-icon fas fa-sign-out-alt"></i>
                                    <p>
                                        Đăng xuất
                                    </p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2019 <a href="http://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.0.4
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/AdminLayout/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/AdminLayout/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <!-- Bootstrap 4 -->

    <script src="~/AdminLayout/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- ChartJS -->
    @* <script src="~/AdminLayout/plugins/chart.js/Chart.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Sparkline -->
    <script src="~/AdminLayout/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="~/AdminLayout/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/AdminLayout/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/AdminLayout/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/AdminLayout/plugins/moment/moment.min.js"></script>
    <script src="~/AdminLayout/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/AdminLayout/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLayout/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/AdminLayout/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLayout/js/adminlte.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminLayout/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLayout/js/demo.js"></script>

    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $('#pushmenu').on('click', function () {
                $('body').toggleClass('sidebar-collapse');
            });
        });
    </script>

    <script>
        // Hàm để tính toán khoảng thời gian đã trôi qua
        function timeSince(date) {
            var seconds = Math.floor((new Date() - date) / 1000);
            var interval = seconds / 31536000;
            if (interval > 1) {
                return Math.floor(interval) + " năm trước";
            }
            interval = seconds / 2592000;
            if (interval > 1) {
                return Math.floor(interval) + " tháng trước";
            }
            interval = seconds / 86400;
            if (interval > 1) {
                return Math.floor(interval) + " ngày trước";
            }
            interval = seconds / 3600;
            if (interval > 1) {
                return Math.floor(interval) + " giờ trước";
            }
            interval = seconds / 60;
            if (interval > 1) {
                return Math.floor(interval) + " phút trước";
            }
            return "Vừa xong";
        }

        document.addEventListener("DOMContentLoaded", function () {
            // Lấy số lượng tin nhắn chưa đọc từ cơ sở dữ liệu
            fetch('/Admin/Chat/GetUnreadMessagesCount')
                .then(response => response.json())
                .then(unreadMessagesCount => {
                    var badge = document.querySelector('.navbar-badge');
                    badge.textContent = unreadMessagesCount;
                });

            fetch('/Admin/Chat/GetUnreadMessages')
                .then(response => response.json())
                .then(unreadMessages => {
                    var dropdownMenu = document.querySelector('.dropdown-menu');

                    unreadMessages.forEach(function (message) {
                        var newItem = document.createElement('li');
                        newItem.innerHTML = `
                            <a class="dropdown-item" href="/Admin/Chat/Index">
                                <div class="media">
                                    <div class="media-body">
                                        <h3 class="dropdown-item-title">
                                            ${message.fromUser}
                                        </h3>
                                        <p class="text-sm">${message.message1}</p>
                                        <p class="text-sm text-muted"><i class="fa fa-clock mr-1"></i> ${timeSince(new Date(message.timestamp))}</p>
                                    </div>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                        `;

                        // Cập nhật thời gian sau mỗi phút
                        var timeElement = newItem.querySelector('.time');
                        var messageTime = new Date();
                        setInterval(function () {
                            timeElement.textContent = timeSince(messageTime);
                            console.log(timeElement);
                        }, 60000); // 60000 ms = 1 phút

                        dropdownMenu.insertBefore(newItem, dropdownMenu.firstChild);
                    });
                });
        });
    </script>
</body>
</html>