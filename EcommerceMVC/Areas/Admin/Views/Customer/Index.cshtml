@model IEnumerable<EcommerceMVC.Areas.Admin.Models.KhachHangModel>

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "_LayoutAdmin";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>QL khách hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin/Home/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item active">QL khách hàng</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header row justify-content-around">
                    <h3 class="card-title">Bảng dữ liệu khách hàng</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div style="overflow-x:auto">
                                <table id="customer-table" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã KH</th>
                                            <th>Mật khẩu</th>
                                            <th>Họ tên</th>
                                            <th>Giới tính</th>
                                            <th>Ngày sinh</th>
                                            <th>Địa chỉ</th>
                                            <th>Điện thoại</th>
                                            <th>Email</th>
                                            <th>Hình</th>
                                            <th>Hiệu lực</th>
                                            <th>Vai trò</th>
                                            <th>Random key</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.MaKh</td>
                                                <td>@item.MatKhau</td>
                                                <td>@item.HoTen</td>
                                                @if(item.GioiTinh)
                                                {
                                                    <td>Nam</td>
                                                }
                                                else
                                                {
                                                    <td>Nữ</td>
                                                }
                                                <td>@item.NgaySinh</td>
                                                <td>@item.DiaChi</td>
                                                <td>@item.DienThoai</td>
                                                <td>@item.Email</td>
                                                <td><img src="~/Hinh/KhachHang/@item.Hinh" style="width: 70px; height: 40px;" alt="@item.HoTen"></img></td>
                                                <td>@item.HieuLuc</td>
                                                <td>@item.VaiTro</td>
                                                <td>@item.RandomKey</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm mb-2" asp-controller="Customer" asp-action="Edit" asp-route-id="@item.MaKh">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Sửa
                                                    </a>
                                                    <a class="btn btn-danger btn-sm text-white delete-button" data-url="@Url.Action("Delete", "Customer", new { id = @item.MaKh })">
                                                        <i class="fas fa-trash"></i>
                                                        Xóa
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
@section Scripts {
    <script>
        $('.delete-button').on('click', function (e) {
            e.preventDefault();
            var url = $(this).data('url');
            if (confirm("Bạn có chắc chắn muốn xóa khách hàng này không?")) {
                $.ajax({
                    url: url,
                    type: 'POST',
                    success: function (result) {
                        // Xử lý sau khi xóa thành công, ví dụ: tải lại trang
                        location.reload();
                    }
                });
            }
        });
    </script>
}

