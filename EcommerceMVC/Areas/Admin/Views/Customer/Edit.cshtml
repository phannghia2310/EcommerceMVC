@model EcommerceMVC.Areas.Admin.Models.KhachHangModel

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "_LayoutAdmin";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chỉnh sửa</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin/Home/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="~/Admin/Supplier/Index">QL Khách hàng</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Customer" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.MaKh"></label>
                            <input type="text" asp-for="@Model.MaKh" class="form-control" />
                            <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.MatKhau"></label>
                            <input type="text" asp-for="@Model.MatKhau" class="form-control" />
                            <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label my-3" asp-for="@Model.HoTen"></label>
                            <input type="text" class="form-control" asp-for="@Model.HoTen" />
                            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.GioiTinh"></label>
                            <select asp-for="@Model.GioiTinh" class="form-control custom-select">
                                  <option selected disabled>Chọn giới tính</option>
                                  <option value="true">Nam</option>
                                  <option value="false">Nữ</option>
                            </select>
                            <span asp-validation-for="@Model.GioiTinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.NgaySinh"></label>
                            <input type="da" asp-for="@Model.NgaySinh" class="form-control" />
                            <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.DiaChi"></label>
                            <input type="text" asp-for="@Model.DiaChi" class="form-control" />
                            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.DienThoai"></label>
                            <input type="text" asp-for="@Model.DienThoai" class="form-control" />
                            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email">Email</label>
                            <input type="text" asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Hinh"></label>
                            <input type="file" name="Hinh" asp-for="@Model.Hinh" class="form-control" onchange="loadImage(event)" />
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.HieuLuc"></label>
                            <input type="text" asp-for="@Model.HieuLuc" class="form-control" />
                            <span asp-validation-for="@Model.HieuLuc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.VaiTro"></label>
                            <input type="text" asp-for="@Model.VaiTro" class="form-control" />
                            <span asp-validation-for="@Model.VaiTro" class="text-danger"></span>
                        </div
                        <div class="form-group">
                            <label asp-for="@Model.RandomKey"></label>
                            <input type="text" asp-for="@Model.RandomKey" class="form-control" />
                            <span asp-validation-for="@Model.RandomKey" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                            <input type="submit" value="Lưu thay đổi" class="btn btn-success float-right">
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-6">
            <img id="preview" class="w-100" src="~/Hinh/KhachHang/@Model.Hinh" alt="@Model.HoTen" style="display: block" />
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function loadImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('preview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}