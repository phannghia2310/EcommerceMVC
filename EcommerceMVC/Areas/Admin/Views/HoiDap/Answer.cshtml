@model EcommerceMVC.Areas.Admin.Models.HoiDapModel

@{
    ViewData["Title"] = "Trả lời";
    Layout = "_LayoutAdmin";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Trả lời</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin/Home/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="~/Admin/HoiDap/Index">QL Hỏi đáp</a></li>
                    <li class="breadcrumb-item active">Trả lời</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-body">
                    <form asp-action="Answer" asp-controller="HoiDap" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.MaHd"></label>
                            <input type="text" asp-for="@Model.MaHd" class="form-control" readonly/>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.HoTen"></label>
                            <input type="text" asp-for="@Model.HoTen" class="form-control" readonly/>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input type="text" asp-for="@Model.Email" class="form-control" readonly/>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CauHoi"></label>
                            <input type="text" asp-for="@Model.CauHoi" class="form-control" readonly/>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.TraLoi"></label>
                            <textarea asp-for="@Model.TraLoi" class="w-100 form-control border-0 mb-4" rows="5" cols="10" placeholder="Nội dung câu trả lời"></textarea>
                            <span asp-validation-for="@Model.TraLoi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a asp-controller="HoiDap" asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                            <input type="submit" value="Gửi câu trả lời" class="btn btn-success float-right">
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
