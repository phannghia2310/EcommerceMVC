@{
    var controller = (string?)ViewContext.RouteData.Values["controller"];
    var action = (string?)ViewContext.RouteData.Values["action"];
}

<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tìm kiếm bằng từ khóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input id="search-text" type="search" class="form-control p-3" placeholder="từ khóa" aria-describedby="search-icon-1" name="query">
                    <span id="search-button" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->

<!-- Navbar start -->
<div class="container-fluid fixed-top">
    <div class="container topbar bg-primary d-none d-lg-block">
        <div class="d-flex justify-content-between">
            <div class="top-info ps-2">
@*                 <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">1159 TL 10, Tân Tạo, Bình Tân, TP. HCM</a></small>
                <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">phankhacbaonghia@gmail.com</a></small> *@
            </div>
            <div class="top-link pe-2">
                <a href="#" class="text-white"><small class="text-white mx-2">Chính sách bảo mật</small>/</a>
                <a href="#" class="text-white"><small class="text-white mx-2">Điều khoản sử dụng</small>/</a>
                <a href="#" class="text-white"><small class="text-white ms-2">Bán hàng và hoàn tiền</small></a>
            </div>
        </div>
    </div>
    <div class="container px-0">
        <nav class="navbar navbar-light bg-white navbar-expand-xl">
            <a href="/" class="navbar-brand"><h1 class="text-primary display-6">Ecommerce2024</h1></a>
            <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars text-primary"></span>
            </button>
            <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a href="/" class="nav-item nav-link 
                                @(controller == "Home" && action == "Index" ? "active" : "")">Trang chủ</a>
                    <a asp-action="Index" asp-controller="HangHoa" class="nav-item nav-link 
                                @(controller == "HangHoa" && action == "Index" ? "active" : "")">Hàng hóa</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Thành viên</a>
                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                            <a asp-action="Index" asp-controller="Cart" class="dropdown-item">Giỏ hàng</a>
                            <a asp-action="History" asp-controller="Cart" class="dropdown-item">Lịch sử đặt hàng</a>
                        </div>
                    </div>
                    <a asp-action="Index" asp-controller="HoiDap" class="nav-item nav-link">Hỏi đáp</a>
                </div>
                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>

                    @await Component.InvokeAsync("Cart")

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-user fa-2x" aria-hidden="true"></i></a>
                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a class="dropdown-item" asp-action="DangNhap" asp-controller="KhachHang">Đăng nhập</a>
                                <a class="dropdown-item" asp-action="DangKy" asp-controller="KhachHang">Đăng ký</a>
                            }
                            else
                            {
                                <a class="dropdown-item" asp-action="Profile" asp-controller="KhachHang">Thông tin cá nhân</a>
                                <a class="dropdown-item" asp-action="NhapMailXacThuc" asp-controller="KhachHang">Đổi mật khẩu</a>
                                <a class="dropdown-item" asp-action="DangXuat" asp-controller="KhachHang">Đăng xuất</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->