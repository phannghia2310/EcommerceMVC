@model IEnumerable<EcommerceMVC.ViewModels.ChiTietHangHoaVM>

@foreach(var item in Model)
{
    <div class="border border-primary rounded position-relative vesitable-item">
        <div class="vesitable-img">
            <a asp-action="Detail" asp-controller="Cart" asp-route-id="@item.MaHangHoa">
                <img src="~/Hinh/HangHoa/@item.Hinh" class="img-fluid w-50 rounded-top" alt="@item.TenHangHoa">
            </a>
        </div>
        <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@item.TenLoai</div>
        <div class="p-4 pb-0 rounded-bottom">
            <a asp-action="Detail" asp-controller="Cart" asp-route-id="@item.MaHangHoa">
                <h4>@item.TenHangHoa</h4>
            </a>
            <p>@item.MoTaNgan</p>
            <div class="d-flex justify-content-between flex-lg-wrap">
                <p class="text-dark fs-5 fw-bold">$ @item.DonGia</p>
                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.MaHangHoa" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ</a>
            </div>
        </div>
    </div>
}
