@model EcommerceMVC.ViewModels.KhachHangVM

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4 text-center align-items-center justify-content-center">Đăng Nhập</h1>
        <form asp-action="DoiMatKhau">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-12">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.MatKhau" type="password" class="form-control">
                                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Mật khẩu mới</label><sup>*</sup>
                                <input type="password" name="newPassword" class="form-control">
                            </div>
                        </div>
                         <div class="col-md-12 col-lg-12">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Nhập lại mật khẩu</label><sup>*</sup>
                                <input name="rePassword" type="password" class="form-control">
                            </div>
                        </div>

                        @if(!string.IsNullOrEmpty(ViewBag.ErrorOldPass))
                        {
                            <div class="col-md-12 col-lg-6 my-3 alert alert-danger">@ViewBag.ErrorOldPass</div>
                        }
                        else if (!string.IsNullOrEmpty(ViewBag.ErrorRePass))
                        {
                            <div class="col-md-12 col-lg-6 my-3 alert alert-danger">@ViewBag.ErrorRePass</div>
                        }
                        else
                        {
                            <div class="col-md-12 col-lg-6 my-3 alert alert-danger">@ViewBag.ErrorNewPass</div>
                        }
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-25 text-primary">Đổi mật khẩu</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
