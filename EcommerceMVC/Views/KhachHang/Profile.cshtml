@model EcommerceMVC.ViewModels.KhachHangVM

@{
    ViewData["Title"] = "Thông tin khách hàng";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4 text-center align-items-center justify-content-center">Thông tin Khách Hàng</h1>
        <form asp-action="Profile" asp-controller="KhachHang" enctype="multipart/form-data">
            <div class="row g-5 m-lg-5">
                <div class="col-md-12 col-lg-6 col-xl-12">
                    <div class="form-item w-40 text-center">
                        @if(!string.IsNullOrEmpty(ViewBag.SuccessUpdate)) 
                        {
                            <div style="margin-left:380px;" class="col-md-12 col-lg-6 my-3 alert alert-success">@ViewBag.SuccessUpdate</div>
                        }
                        else
                        {
                            <div style="margin-left:380px;" class="col-md-12 col-lg-6 my-3 alert alert-dager">@ViewBag.ErrorUpdate</div>
                        }
                        <a asp-action="Profile" asp-controller="KhachHang">
                            <img src="~/Hinh/KhachHang/@Model.Hinh" class="img-fluid w-25 h-25 rounded-circle my-3"  alt="@Model.Hinh"/>
                        </a>
                        <input type="file" name="Hinh" class="form-control" style="width: 400px; margin-left: 380px;" asp-for="@Model.Hinh">
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.HoTen"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.HoTen">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.Email">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-check my-3">
                        <input type="checkbox" class="form-check-input" asp-for="@Model.GioiTinh">
                        <label class="form-check-label" for="GioiTinh">Nam?</label>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.NgaySinh" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.NgaySinh" class="form-control">
                            <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DiaChi"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.DiaChi">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.DienThoai"></label><sup>*</sup>
                        <input type="text" class="form-control" asp-for="@Model.DienThoai">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">Cập nhật</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
