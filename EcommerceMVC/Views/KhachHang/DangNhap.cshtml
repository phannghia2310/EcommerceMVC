@model EcommerceMVC.ViewModels.DangNhapVM

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4 text-center align-items-center justify-content-center">Đăng Nhập</h1>
        @* <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl"> *@
        <form asp-action="DangNhap">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-12">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.UserName" type="text" class="form-control">
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Password" type="password" class="form-control">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-25 text-primary">Đăng nhập</button>
                        <a asp-action="QuenMatKhau" asp-controller="KhachHang">Quên mật khẩu?</a>
                    </div>

                    <p class="text-center fw-bold mx-3 mt-5">Hoặc</p>

                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <a asp-action="GoogleLogin" asp-controller="KhachHang" class="btn btn-danger w-25 from-control">
                            <i class="fab fa-google"></i> Tiếp tục bằng Google
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>